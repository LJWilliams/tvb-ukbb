subjdir="$PWD/$1"


${FSLDIR}/bin/feat ${subjdir}/fMRI/rfMRI.fsf

file=${subjdir}/fMRI/rfMRI.ica/filtered_func_data.nii.gz
while [ ! -f "$file" ]
do
sleep 1

done

sleep 2m
